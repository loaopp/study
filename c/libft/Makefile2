CC			=	gcc
CFLAGS		=	-Wall -Werror -Wextra
NAME		=	libft.a
DIR_SRCS	=	/.
DIR_HDRS	=	/.
DIR_OBJS	=	/.
SRCS		=	ft_memset.c \
				ft_bzero.c \
				ft_memcpy.c \
				ft_memccpy.c \
				ft_memmove.c \
				ft_memchr.c \
				ft_memcmp.c \
				ft_strlen.c \
				ft_strlcpy.c \
				ft_strlcat.c \
				ft_strchr.c \
				ft_strrchr.c \
				ft_strnstr.c \
				ft_strncmp.c \
				ft_atoi.c \
				ft_isalpha.c \
				ft_isdigit.c \
				ft_isalnum.c \
				ft_isascii.c \
				ft_isprint.c \
				ft_toupper.c \
				ft_tolower.c \
				ft_calloc.c \
				ft_strdup.c \
				ft_substr.c \
				ft_strjoin.c \
				ft_strtrim.c \
				ft_split.c \
				ft_itoa.c \
				ft_strmapi.c \
				ft_putchar_fd.c \
				ft_putstr_fd.c \
				ft_putendl_fd.c \
				ft_putnbr_fd.c \
				ft_strrev.c \
				ft_lstnew.c \
				ft_lstadd_front.c \
				ft_lstsize.c \
				ft_lstlast.c \
				ft_lstadd_back.c \
				ft_lstdelone.c \
				ft_lstclear.c \
				ft_lstiter.c \
				ft_lstmap.c
OBJS	=	$(SRCS:.c,.o)


all:	$(NAME)

$(NAME):	$(OBJS)
	ar rsc $@ $^
	echo $(OBJS)

.c.o:	$(SRCS)
	$(CC) $(CFLAGS) -c -o $@ $<

# $(NAME):	$(OBJS)
# 	ar rsc $@ $<

clean:
	rm -f *.o

fclean:	clean
	rm -f $(NAME)

re:	clean all

.PHONY:	all clean fclean re bonus
